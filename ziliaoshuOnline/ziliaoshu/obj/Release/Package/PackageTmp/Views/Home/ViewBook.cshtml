@{
    ViewBag.Title = "ViewBook";
}
<script src="~/Scripts/jquery-1.8.2.min.js"></script>

<script type="text/javascript">

    displayPDF = function () {
        //var para = $.query.get('id');
        var para = window.location.href.split("?")
        if (para.length > 1) {
            $("#displayZiliaoshu").attr("src", "/script/web/viewer.html?file=" + encodeURIComponent(para[1].split("=")[1]));
            $("#divDownload").show();
            $("#aDownload").attr("href", para[1].split("=")[1]);
            
        }
        else {
            $("#divDownload").hide();
        }

        $("#displayZiliaoshu").attr("src", $("#displayZiliaoshu").attr("src"));
}
$(function () {
    displayPDF();; //这个是jquery代码
});
</script>

<div style="width:100%; height:867px">
    <div id="divDownload"><small><a href="#" target="_blank" id="aDownload" ><i class="glyphicon glyphicon-download"></i> 保存到本地</a></small></div>
    <iframe id="displayZiliaoshu" src="" style="width:98%; height:100%"></iframe>
</div>

